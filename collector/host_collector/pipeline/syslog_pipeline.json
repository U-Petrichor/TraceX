{
  "description": "Map Syslog logs to TraceX Unified Event Schema",
  "processors": [
    {
      "grok": {
        "field": "message",
        "patterns": [
          "%{SYSLOGTIMESTAMP:syslog_timestamp} %{SYSLOGHOST:host.hostname} %{DATA:process.name}(?:\\[%{POSINT:process.pid:long}\\])?: %{GREEDYDATA:message}"
        ],
        "ignore_missing": true
      }
    },
    {
      "date": {
        "field": "syslog_timestamp",
        "target_field": "@timestamp",
        "formats": ["MMM  d HH:mm:ss", "MMM dd HH:mm:ss"],
        "timezone": "UTC"
      }
    },
    {
      "set": {
        "field": "event.dataset",
        "value": "syslog"
      }
    },
    {
      "set": {
        "field": "event.kind",
        "value": "event"
      }
    },
    {
      "set": {
        "field": "event.category",
        "value": "host"
      }
    },
    {
      "set": {
        "field": "event.type",
        "value": "info"
      }
    },
    {
      "set": {
        "field": "host.os.family",
        "value": "linux"
      }
    },
    {
      "remove": {
        "field": ["syslog_timestamp"],
        "ignore_missing": true
      }
    }
  ],
  "on_failure": [
    {
      "set": {
        "field": "error.message",
        "value": "{{ _ingest.on_failure_message }}"
      }
    }
  ]
}
